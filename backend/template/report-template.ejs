<!DOCTYPE html>
<html>

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
	<style>
		.logo {
			width: 200;
			height: 200;
		}
	</style>
</head>

<body>
	<div class="container mt-3">
		<div class="row">
			<div class="col-md-8 offset-md-2 container">
				<div class="row">
					<div class="col-md-12 align-self-center">
						<img src="http://localhost:3000/logo/libro.png" width="200" height="200" alt="Logo" class="float-start">
						<p class="text-center mt-5 display-1">Recibo</p>
						<p class="text-center h5">
							<span class="text-muted">Ticket de compra</span>
						</p>
					</div>
				</div>
				<div class="row mt-5">
					<div class="col-md-12">
						<table class="table">
							<tbody>
								<tr>
									<th colspan="2" scope="row">Nombre</th>
									<td colspan="3" class="text-center"><%= pedido.nombre %></td>
								</tr>

								<tr>
									<th colspan="2" scope="row">Direccion</th>
									<td colspan="3" class="text-center"><%= pedido.Destino %></td>
								</tr>

								<tr>
									<th colspan="2" scope="row">Fecha Pedido</th>
									<td colspan="3" class="text-center"><%= pedido.Fecha_pedido %></td>
								</tr>

								<tr>
									<th colspan="2" scope="row">Fecha Llegada</th>
									<td colspan="3" class="text-center"><%= pedido.Fecha_llegada %></td>
								</tr>

								<tr>
									<th colspan="2" scope="row">Pago en</th>
									<td colspan="3" class="text-center"><%= pedido.Sucursal %></td>
								</tr>
								<tr>
									<th colspan="2" scope="row">CÃ³digo de compra</th>
									<td colspan="3" class="text-center"><%= pedido.Codigo %></td>
								</tr>
								<tr>
									<th scope="row">Productos</th>
									<td>Formato</td>
									<td>Precio unidad</td>
									<td>Cantidad</td>
									<td>Monto de la compra</td>
								</tr>
								<% if(pedido.productos.length > 0) { %>
									<% pedido.productos.forEach(producto => { %>
										<tr>
											
											<td class="text-center"><%= producto.Titulo %></td>
											<td class="text-center"><%= producto.Formato %></td>
											<td class="text-center">$<%= producto.Precio %></td>
											<td class="text-center"><%= producto.Cantidad %></td>
											<td class="text-end">$<%= producto.Submonto %></td>
										</tr>
									<% }) %>
								<% } %>
								<tr>
									<th colspan="2" scope="row">Importe total</th>
									<td colspan="3" class="text-end">$<%= pedido.Monto %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

</html>